<Grid 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:sl="http://schemas.levcn.com/2013/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <Grid x:Name="LayoutRoot1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition/>

                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.548*"/>
                        <ColumnDefinition Width="0.452*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Width="749">
                        <Image  Source="images/logo.png" Width="400" Stretch="Fill" Height="63"  HorizontalAlignment="Left" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="8,26,0,0">
                            <TextBlock TextWrapping="Wrap" Text="客户端下载" Foreground="#FFA3A4A4" FontSize="14" Margin="101,10,0,0"/>
                            <TextBlock TextWrapping="Wrap" Text="联系方式" Foreground="#FFA3A4A4" FontSize="14" Margin="20,10,0,0"/>
                            <TextBlock TextWrapping="Wrap" Text="用户手册" Foreground="#FFA3A4A4" FontSize="14" Margin="20,10,0,0"/>
                            <TextBlock TextWrapping="Wrap" Text="帮助" Foreground="#FFA3A4A4" FontSize="14" Margin="20,10,0,0"/>
                            <TextBlock TextWrapping="Wrap" Text="15:20" Margin="30,4,0,0" FontSize="21.333" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0" Background="#FF0BBFDF" >
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="268*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.548*"/>
                            <ColumnDefinition Width="0.452*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.ColumnSpan="2"  Source="Images/bgt.png" Stretch="Fill" Grid.RowSpan="2"/>
                        <Border Grid.Column="0" BorderThickness="1" CornerRadius="8" Background="#66FFFFFF" Height="400" Margin="147,70,74,68" Width="500">
                            <Grid VerticalAlignment="Bottom"  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="21*"/>
                                    <RowDefinition Height="248*"/>
                                </Grid.RowDefinitions>
				<!--登陆区域start-->
                                <sl:LoginPanel Grid.Row="1" HorizontalAlignment="Center" Style="{StaticResource style1}"></sl:LoginPanel>
				<!--登陆区域end-->
                            </Grid>

                        </Border>

                        <Grid Grid.Row="1" Background="#80000000" Grid.ColumnSpan="2">
                            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="技术支持：北京中电方大科技股份有限公司" VerticalAlignment="Center" Foreground="#FFCDCDCD" FontSize="14"/>



                        </Grid>

                    </Grid>


                </Grid>
            </Grid>
</Grid>
