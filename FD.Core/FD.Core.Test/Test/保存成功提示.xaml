                    <StackPanel Orientation="Vertical">
                        <Button Content="1312312" Width="200" Margin="10"></Button>
                        <Button Content="1312312" Width="200" Margin="10"></Button>
                        <Button Content="1312312" Width="200" Margin="10"></Button>
