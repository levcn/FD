                <Grid Width="800" Height="500" x:Name="aaaaaaaa">
                    <telerik:RadBusyIndicator x:Name="sss" BusyContent="保存成功" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  FontSize="18" IsBusy="False" Style="{StaticResource MessageBoxLayer}">
                        <sl:UserSelector Name="aaa" OK="Aaa_OnOK" Cancel="Aaa_OnCancel"></sl:UserSelector>
                    </telerik:RadBusyIndicator>
                </Grid>
            </telerik:RadDropDownButton.DropDownContent>
        </telerik:RadDropDownButton>
        
        <!--        Style="{StaticResource RadBusyIndicatorStyle1}"-->
        
    </Grid>
</UserControl>
