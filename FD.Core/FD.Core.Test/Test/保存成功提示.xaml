        </editors:ListDownPanel>
            
            
            
            
            <Button Content="asdfasdfasdfasdfasd&lt;&lt;" VerticalAlignment="Top" Grid.Row="1" Height="300"></Button>
        </Grid>
        <Grid>
            <Button Width="100" Height="100" Click="ButtonBase_OnClick1"></Button>
<!--            <Popup  x:Name="DropDownPopup" IsOpen="True">-->
<!--                <Border Background="BlueViolet" Width="100" Height="100"></Border>-->
<!--            </Popup>-->
        </Grid>
        
        <telerik:RadDropDownButton Click="DropdownButton_OnClick" DropDownPlacement="Bottom" Visibility="Visible" x:Name="dropdownButton" IsOpen="True"  HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="18" Foreground="{StaticResource 不重要文字颜色}" Content="添加" KeepOpen="True" Width="100" Height="50" telerik:RadToolTipService.ToolTipContent="选择人员" >
            <!--                                            telerik:RadToolTipService.ToolTipContentTemplate="{StaticResource ToolTipStyle}"-->
