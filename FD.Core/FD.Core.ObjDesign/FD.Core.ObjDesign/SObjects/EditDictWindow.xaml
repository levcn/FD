                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Right" Text="主键字段："></TextBlock>
                    <ComboBox DisplayMemberPath="Code" IsReadOnly="True" SelectedValuePath="Code" IsEditable="True" Text="{Binding ElementName=aa,Path=Relation.DictKey,Mode=TwoWay}" SelectionChanged="CB_DicMainField_OnSelectionChanged"  Grid.Column="1" Name="CB_DicMainField" MinWidth="80"></ComboBox>
                </Grid>
                <Grid Margin="5" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Right" Text="显示名字段："></TextBlock>
                    <ComboBox DisplayMemberPath="Code" IsReadOnly="True" SelectedValuePath="Code" IsEditable="True"  Text="{Binding ElementName=aa,Path=Relation.DictShowName,Mode=TwoWay}" Grid.Column="1" Name="CB_DicName" MinWidth="80"></ComboBox>
                </Grid>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="2" Margin="0" Orientation="Horizontal" Height="50" HorizontalAlignment="Right">
