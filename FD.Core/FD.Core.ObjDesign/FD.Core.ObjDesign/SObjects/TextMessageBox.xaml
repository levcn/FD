<Window x:Class="ProjectCreater.SObjects.TextMessageBox"
        x:Name="aa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示信息" Height="200" Width="350">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
<!--            <RowDefinition Height="Auto"></RowDefinition>-->
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
<!--        <TextBlock Margin="50,20,20,20"></TextBlock>-->
        <TextBox IsReadOnly="True" BorderBrush="AliceBlue" Text="{Binding ElementName=aa,Path=Text}" Grid.Row="0"  AcceptsReturn="True" Margin="50,20,10,5"></TextBox>
        <Grid Grid.Row="1" Background="WhiteSmoke">
        <Button Content="确定" Click="ButtonBase_OnClick" HorizontalAlignment="Right" IsDefault="True" Margin="10,10,50,10" Width="70" Height="25"></Button>
        </Grid>
    </Grid>
</Window>
