<wpfControls:BaseWindow x:Class="ProjectCreater.SObjects.SPList"
        x:Name="aa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfControls="clr-namespace:WPFControls;assembly=WPFControls"
        Title="SPList" Height="500" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <!--            <Button Content="属性" Width="40" Margin="2" Click="BT_Edit_OnClick"></Button>-->
            <!--            <Button Content="验证" Width="40" Margin="2" Click="BT_Validate_OnClick"></Button>-->
            <StackPanel Name="SP_ToolBar" Orientation="Horizontal" Margin="0,0,0,0">
                <Button IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}" Content="添加" Width="40" Margin="2" Command="{Binding ElementName=aa,Path=ItemAddCommand}" ></Button>
                <Button IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}" Content="上移" Width="40" Margin="2" Command="{Binding ElementName=aa,Path=ItemUpCommand}" ></Button>
                <Button IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}"  Content="下移" Width="40" Margin="2"  Command="{Binding ElementName=aa,Path=ItemDownCommand}"></Button>
                <Button IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}" Content="删除" Width="40" Margin="2" Command="{Binding ElementName=aa,Path=ItemDeleteCommand}" ></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <!--                <Button IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}" Content="添加名称" Width="60" Margin="2" Command="{Binding ElementName=aa,Path=AddNamePropCommand}" ></Button>-->
                <!--                <Button IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}" Content="添加排序" Width="60" Margin="2" Command="{Binding ElementName=aa,Path=AddOrderPropCommand}" ></Button>-->
                <!--                <Button   IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}" Content="添加注销" Width="60" Margin="2" Command="{Binding ElementName=aa,Path=AddCancelPropCommand}" ></Button>-->
            </StackPanel>

        </StackPanel>
        <DataGrid CanUserSortColumns="False" ItemsSource="{Binding ElementName=aa,Path=ItemSource,Mode=TwoWay}"  IsEnabled="{Binding ElementName=aa,Path=Editable,Mode=TwoWay}" Name="dataGrid" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="名称" Binding="{Binding ObjectName}" Width="{Binding Source={StaticResource Habit},Path=ObjectMainEdit.GNameWidth,Mode=TwoWay,Converter={StaticResource GridLengthToInt}}"></DataGridTextColumn>



                <DataGridTextColumn Header="代码" Width="{Binding Source={StaticResource Habit},Path=ObjectMainEdit.GCodeWidth,Mode=TwoWay,Converter={StaticResource GridLengthToInt}}">
                    <DataGridTextColumn.Binding>
                        <Binding Path="ObjectCode">
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="操作" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Grid>
                            <Button Content="编辑" Click="ButtonBase_OnClick" DataContext="{Binding}"></Button>
                        </Grid>
                    </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
<!--                <DataGridComboBoxColumn  Header="数据类型" TextBinding="{Binding ParameterType}" Width="{Binding Source={StaticResource Habit},Path=ObjectMainEdit.GTypeWidth,Mode=TwoWay,Converter={StaticResource GridLengthToInt}}">-->
<!--                    <DataGridComboBoxColumn.ElementStyle>-->
<!--                        <Style TargetType="ComboBox">-->
<!--                            <Setter Property="ItemsSource" Value="{Binding Path=DataTypes,ElementName=aa}" />-->
<!--                        </Style>-->
<!--                    </DataGridComboBoxColumn.ElementStyle>-->
<!--                    <DataGridComboBoxColumn.EditingElementStyle>-->
<!--                        <Style TargetType="ComboBox">-->
<!--                            <Setter Property="ItemsSource" Value="{Binding Path=DataTypes,ElementName=aa}" />-->
<!--                        </Style>-->
<!--                    </DataGridComboBoxColumn.EditingElementStyle>-->
<!--                </DataGridComboBoxColumn>-->
<!--                <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="{Binding Source={StaticResource Habit},Path=ObjectMainEdit.GNameWidth,Mode=TwoWay,Converter={StaticResource GridLengthToInt}}"></DataGridTextColumn>-->
<!--                <DataGridTextColumn Header="长度" Binding="{Binding ParameterSize}"  Width="{Binding Source={StaticResource Habit},Path=ObjectMainEdit.GLenghtWidth,Mode=TwoWay,Converter={StaticResource GridLengthToInt}}"></DataGridTextColumn>-->
<!--                <DataGridTextColumn Header="初始值" Binding="{Binding DefaultValue}" Width="{Binding Source={StaticResource Habit},Path=ObjectMainEdit.GDefaultValueWidth,Mode=TwoWay,Converter={StaticResource GridLengthToInt}}"></DataGridTextColumn>-->
<!--                <DataGridCheckBoxColumn Header="是否返回值" Binding="{Binding IsOutput}" Width="{Binding Source={StaticResource Habit},Path=ObjectMainEdit.GIsPKeyWidth,Mode=TwoWay,Converter={StaticResource GridLengthToInt}}"></DataGridCheckBoxColumn>-->

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</wpfControls:BaseWindow>
