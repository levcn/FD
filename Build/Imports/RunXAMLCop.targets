<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="3.5" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <UsingTask AssemblyFile="..\Tools\Telerik.BuildTasks\Telerik.BuildTasks.dll" TaskName="RunXamlCop" />

  <PropertyGroup>
    <CoreCompileDependsOn>
      $(CoreCompileDependsOn);
      RunXamlCop
      </CoreCompileDependsOn>
  </PropertyGroup>

  <Target Name="RunXamlCop">
    <RunXamlCop Condition="'$(Configuration)' != 'Debug'" SourceFiles="%(PreprocessedXaml.OutputFile)" ExcludeDictionary="@(XamlCopExclude)" ThemeName="Default" />
  </Target>
  
</Project>